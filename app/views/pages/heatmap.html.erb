<!DOCTYPE html>
<html>
  <head>
    <title>HOME</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 100%;
      }
      #radius-panel {
        position: absolute;
        top: 10px;
        left: 25%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 1px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 30px;
        padding-left: 10px;
      }
      #floating-panel {
        position: absolute;
        top: 70%;
        left: 1%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 3px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 5px;
        padding-left: 5px;
      }
      #heatmap-panel {
        position: absolute;
        top: 70%;
        left: 68%;
        z-index: 5;
        background-color: #fff;
        padding: 5px;
        border: 3px solid #999;
        text-align: center;
        font-family: 'Roboto','sans-serif';
        line-height: 5px;
        padding-left: 5px;
      }
    </style>
  </head>
  <body>
    <div id="radius-panel">
      <input id="radius-input" type="textbox" value="2">
      <input id="radius-submit" type="button" value="Set Radius">
    </div>
    <div id="floating-panel">
      <%= form_tag("/search", method: "get") do %>
        <p><%= label_tag(:location, "Look up most popular hashtag in:") %>
        <%= text_field_tag(:location) %></p>
        <p><%= label_tag(:date, "on date, e.g. 2016-05-16 (optional):") %>
        <%= text_field_tag(:date) %></p>
        <p><%= submit_tag("Search") %></p>
      <% end %>
    </div>
    <div id="heatmap-panel">
      <%= form_tag("/heatmap", method: "get") do %>
        <p><%= label_tag(:hashtag, "View heatmap for hashtag:") %>
        <%= text_field_tag(:hashtag) %></p>
        <p><%= label_tag(:date, "on date (e.g. 2016-05-16):") %>
        <%= text_field_tag(:date) %></p>
        <p><%= submit_tag("Map") %></p>
      <% end %>
    </div>
    <div id="map"></div>
    <script>
      var map, heatmap;

      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          zoom: 5,
          center: {lat: 37, lng: -96.5},
        });

        heatmap = new google.maps.visualization.HeatmapLayer({
          data: getPoints(),
          radius: 10,
          map: map
        });

        document.getElementById('radius-submit').addEventListener('click', function() {
          var val = document.getElementById('radius-input').value;
          changeRadius(val);
        });
      }
      function changeRadius(value) {
        if (!isNaN(value)){
          heatmap.set('radius', value);
        }
      }
      function changeOpacity() {
        heatmap.set('opacity', heatmap.get('opacity') ? null : 0.2);
      }
      function getPoints() {
        return [
          <% @records.each do |row| %>
            new google.maps.LatLng(<%=row['long']%>, <%=row['lat']%>),
          <% end %>
        ];
      }
    </script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GoogleMapsAPIKey']%>&libraries=visualization&callback=initMap">
    </script>
  </body>
</html>
